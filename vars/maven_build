def call(String goals = 'clean package') {
    // Validate Maven installation
    echo "ğŸ” Checking Maven installation..."
    def mvnCmd = tool name: 'MAVEN3', type: 'maven'
    if (!mvnCmd?.trim()) {
        error "âŒ Maven tool 'MAVEN3' not found in Jenkins. Please configure it under 'Manage Jenkins â†’ Global Tool Configuration'."
    }

    // Info message
    echo "ğŸš€ Starting Maven build with goals: ${goals}"

    // Try running the Maven build
    try {
        sh "${mvnCmd}/bin/mvn ${goals}"
        echo "âœ… Maven build completed successfully!"
    } catch (err) {
        echo "âŒ Maven build failed: ${err}"
        error "Stopping the pipeline due to build failure."
    }
}
